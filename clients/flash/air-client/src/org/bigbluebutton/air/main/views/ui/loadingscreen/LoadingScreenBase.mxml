<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:view="org.bigbluebutton.air.common.views.*"
				xmlns:assets="assets.*"
				styleName="loadingScreenStyle">

	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<!-- <s:Image styleName="bbbLogoStyle"
			 horizontalCenter="0"
			 verticalCenter="0" /> -->
	<s:VGroup width="100%"
			  height="100%"
			  horizontalAlign="center"
			  verticalAlign="middle">
		<s:Label text="{resourceManager.getString('resources', 'loading.title')}"
				 styleName="loadingScreenTitle" />
		<s:Spacer height="1%" />
		<s:Line width="12%">
			<s:stroke>
				<s:SolidColorStroke color="{getStyle('lineColor')}" />
			</s:stroke>
		</s:Line>
		<s:Spacer height="2%" />
		<s:Label text="{resourceManager.getString('resources', 'loading.message')}"
				 width="40%"
				 textAlign="center" />
	</s:VGroup>

</view:NoTabView>
